<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title rightSidebarBlog
        link(rel="stylesheet", href="../../fonts/fonts.css")
        link(rel="stylesheet", href="../rightSidebarBlog/css/rightSidebarBlog.css")
    body
        include ../components/pug-blocks/nav-bar.pug
        main
            include ../components/pug-blocks/cover.pug
            +text('Latest Info', 'Our Blog Post', 'Home - Right Side Bar Blog')
            section.posts
                .posts__container.fixed-container.flex-container
                    .posts__content
                        mixin img(img)
                            .posts__box.flex-container
                                img(src="images/"+img, alt="img-post-1")
                                .posts__group-text
                                    h3.posts__title The master bedroom suite is spaci of 
                                    .posts__icon.flex-container
                                        .posts__date 16 June, 2018
                                        .posts__comment 22
                                        .posts__likes 36
                                    p.posts__text Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore.
                                    a(href="").posts__link Continue Reading<span class="posts__span"></span>
                        +img('img-post-1.jpg')
                        +img('img-post-2.jpg')
                        +img('img-post-3.png')
                        +img('img-post-4.jpg')
                        +img('img-post-5.png')
                        mixin label(id,text)
                            label(for="yesN0-"+id).posts__label
                                input(type="radio" name="yesNo", id="yesN0-"+id).posts__input
                                span.posts__label-span= text
                        +label(1,1)
                        +label(2,2)
                        +label(3,3)
                        +label(4,4)
                        +label(5,'>')
                    aside.posts__side-colomn
                        .posts__search.flex-container
                            input(type="search" placeholder="Search").posts__search-input
                            <span class="posts__search-span"></span>
                        .posts__people
                            h2.posts__title-people Recent Post
                            .posts__boxs.flex-container
                                img(src="images/img-face.jpg", alt="img-face")
                                .posts__group-text
                                    h3.posts__title.posts__title_padding-bottom The Master bedroom
                                    p.posts__text.posts__text_padding-bottom Lorem ipsum dolor sit amet,  icing.
                            .posts__boxs.flex-container
                                img(src="images/img-face-2.jpg", alt="img-face")
                                .posts__group-text
                                    h3.posts__title.posts__title_padding-bottom The Master bedroom
                                    p.posts__text.posts__text_padding-bottom Lorem ipsum dolor sit amet,  icing.
                            .posts__boxs.flex-container
                                img(src="images/img-face-3.jpg", alt="img-face")
                                .posts__group-text
                                    h3.posts__title.posts__title_padding-bottom The Master bedroom
                                    p.posts__text.posts__text_padding-bottom Lorem ipsum dolor sit amet,  icing.
                        .posts__catalog
                            h2.posts__title-people Catagory
                            .posts__boxs
                                h3.posts__title.posts__title_padding-bottom Cloud Hosting
                                hr
                            .posts__boxs
                                h3.posts__title.posts__title_padding-bottom Shared Hosting
                                hr
                            .posts__boxs
                                h3.posts__title.posts__title_padding-bottom VPS Hosting
                                hr
                            .posts__boxs
                                h3.posts__title.posts__title_padding-bottom Uncatagorized
                        .posts__tags
                            h2.posts__title-people Popular Tags
                            mixin tags(id,text)
                                label(for="tags-"+id).posts__label-tags
                                    input(type="checkbox" name="tags", id="tags-"+id).posts__input-tags
                                    span.posts__tags-span= text
                            +tags(1,'Apps')
                            +tags(2,'Awards')
                            +tags(3,'Web Template')
                            +tags(4,'Awards')
                            +tags(5,'Web Template')
                            +tags(6,'UI')
                            +tags(7,'Web Template')
                            +tags(8,'Awards')
        include ../components/pug-blocks/footer.pug 